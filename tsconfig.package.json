{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "components/**/*",
    "lib/**/*",
    "index.ts"
  ],
  "exclude": [
    "app/**/*",
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}