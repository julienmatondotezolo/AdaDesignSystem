{
  "name": "ada-design-system",
  "version": "3.1.2",
  "description": "Professional typography without gradients - Clean shadcn/ui design system with French/Dutch/English support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/ada-design-system.css"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm run build-package && next build",
    "build-package": "npx tsc --project tsconfig.package.json && npm run build-css",
    "build-css": "npx tailwindcss -i ./app/globals.css -o ./dist/ada-design-system.css --minify",
    "start": "next start",
    "lint": "next lint",
    "showcase": "python -m http.server 8080 --directory showcase",
    "prepublishOnly": "npm run build-package"
  },
  "keywords": [
    "design-system",
    "shadcn",
    "tailwindcss",
    "react",
    "typescript",
    "components",
    "ada",
    "restaurant",
    "hospitality",
    "minimalism",
    "ui",
    "ux"
  ],
  "author": "Emji Devimanus <emjisolutions@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/julienmatondotezolo/AdaDesignSystem.git"
  },
  "homepage": "https://github.com/julienmatondotezolo/AdaDesignSystem#readme",
  "bugs": {
    "url": "https://github.com/julienmatondotezolo/AdaDesignSystem/issues"
  },
  "files": [
    "dist/",
    "components/",
    "lib/",
    "app/globals.css",
    "tailwind.config.js",
    "index.ts",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.2.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "country-flag-icons": "^1.6.14",
    "lucide-react": "^0.263.1",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "next": "14.0.0",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  }
}
